                @Html.ValidationMessage("m_name")
                @Html.TextBoxFor(x => x.m_mobile_no)<br /><br />
                
                <input type="submit" value="Click Me" />
              

            }
        </div>
    </div>
    <hr />
    <hr />
</body>
</html>
